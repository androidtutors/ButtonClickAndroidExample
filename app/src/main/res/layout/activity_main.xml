<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidtutors.buttonclickandroidexample.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textview_hello"
        android:textSize="40sp"
        android:layout_margin="16dp"
        android:layout_gravity="center"/>

    <!-- TODO 1 : Add onClick attribute to button_change and set it to changeTextOnClick -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_change"
        android:text="Change"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:onClick="changeTextOnClick"/>

    <!-- TODO 4 : Add a button with text "Revert" and id button_revert with same attributes as button_change -->



</LinearLayout>
